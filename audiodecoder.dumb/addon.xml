<?xml version="1.0" encoding="UTF-8"?>
<addon id="audiodecoder.dumb" version="2.0.2.1" name="DUMB Audio Decoder" provider-name="spiff">
  <requires>
    <import addon="kodi.binary.global.main" version="1.0.14"/>
    <import addon="kodi.binary.global.filesystem" version="1.0.2"/>
    <import addon="kodi.binary.instance.audiodecoder" version="2.0.0"/>
  </requires>
  <extension point="kodi.audiodecoder" name="dumb" extension=".it|.xm|.s3m" library_linux="audiodecoder.dumb.so.2.0.2"/>
  <extension point="xbmc.addon.metadata">
    <summary lang="en">Dynamic Universal Music Bibliotheque</summary>
    <description lang="en">DUMB is a module audio renderer library. It reads module files and outputs audio that can be dumped to the actual audio playback library.

On Kodi Supports playback of the following module formats:
- IT (Impulse Tracker)
- XM (Fasttracker II)
- S3M (Scream Tracker 3)</description>
    <platform/>
    <license>GPL-2.0</license>
    <source>https://github.com/xbmc/audiodecoder.dumb</source>
    <assets>
      <icon>icon.png</icon>
    </assets>
  </extension>
</addon>
